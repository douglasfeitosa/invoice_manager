<%= form_with(scope: :filter, url: internal_invoices_path, method: :get, local: true) do |form| %>
  <div>
    <%= form.label :number %>
    <%= form.text_field :number, value: params.dig('filter', 'number') %>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.text_field :date, value: params.dig('filter', 'date'), class: 'datepicker' %>
  </div>

  <div class="actions">
    <%= form.submit :filter %>
  </div>
<% end %>
