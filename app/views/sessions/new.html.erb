<div class="container">
  <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

  <div class="row">
    <%= form_for '', url: sessions_path, method: :post do %>
      <div class="mb-3">
        <%= label :user, :token, class: 'form-label' %>
        <%= text_field :user, :token, class: 'form-control' %>
      </div>

      <%= submit_tag :login, class: 'w-100 btn btn-lg btn-primary' %>
      <%= link_to 'back', root_path, class: 'w-100 btn btn-lg btn-warning' %>
    <% end %>
  </div>
</div>
